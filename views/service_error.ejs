<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head'); %>
</head>

<header>
  <%- include('./partials/header'); %>
</header>

<main>
  <body>
    <div class="container">
      <div class="card mt-4 d-flex w-55 p-5 shadow-sm mb-5 bg-white rounded">
        <div class="card-body">
          <img class="card-img-top" src="./images/redex.png" style="display: block; margin-left: auto; margin-right: auto;width: 25%;">
          <h2 style="display:flex;justify-content:center;align-items:center;">We have encountered a service error</h2>
          <h2 style="display:flex;justify-content:center;align-items:center;">Please try again later</h2>          
          <p class="card-text p-1" id="status" style="display:flex;justify-content:center;align-items:center;"></p>
          <p class="card-text p-1" id="messagetext" style="display:flex;justify-content:center;align-items:center;"></p>
          <p class="card-text p-1" id="pspReference" style="display:flex;justify-content:center;align-items:center;"></p>
        </div>
      </div>
    </div>
  </body>
</main>

<script>
  const queryString = window.location.search;
  const urlParams = new URLSearchParams(queryString);
  const status = urlParams.get('status');
  const messagetext = urlParams.get('message');
  const pspReference = urlParams.get('pspreference');
  document.getElementById('status').textContent = `Status: ${status}`;
  document.getElementById('messagetext').textContent = `Message: ${messagetext}`;
  document.getElementById('pspReference').textContent = `PSPReference: ${pspReference}`;
</script>

</html>

